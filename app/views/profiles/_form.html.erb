<%= form_for @profile do |f| %>
  <% @profile.errors.full_messages.each do |msg| %>
    <p class="alert alert-danger"><%= msg %></p>
  <% end %>

  <div class="form-group">
    <label>First Name</label>
    <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Last Name</label>
    <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Street Address</label>
    <%= f.text_field :street_address, placeholder: "Street Address", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>House number</label>
    <%= f.text_field :house_number, placeholder: "House number", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>City</label>
    <%= f.text_field :city, placeholder: "City", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Zip Code</label>
    <%= f.text_field :zip_code, placeholder: "Zip Code", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>State / Region</label>
    <%= f.text_field :state_region, placeholder: "State / Region", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Country</label>
    <%= f.text_field :country, placeholder: "Country", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
    <%= link_to "Back", root_path, class: "btn btn-default" %>
  </div>
<% end %>
