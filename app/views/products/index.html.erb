    <div class="col-md-9">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <center>Sweetest candies</center>
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Sort by
            <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li> <%= link_to "Sort by name", order_by_name_products_path %></li>
              <li> <%= link_to "Sort by price", order_by_price_products_path %></li>
              <li> <%= link_to "Sort by new", order_by_created_at_products_path %></li>
            </ul>
          </div>
        </div>
        <div class="panel-body">
        <% @products.each do |product| %>
        <div class="col-xs-4">
          <div class="img-thumbnail">
            <% product.photos.each do |photo| %>
            <div class="img-thumbnail"><%= image_tag photo.image.thumbnail, class: "img-responsive", :size => '200x200' %></div>
            <h4><%= link_to product.name, product_path(product.id), class: "btn btn-success" %></h4>
            <h4>Price: <%= product.price %> Euro</h4>
            <% end %>
          </div>
        </div>
        <% end %>

        <!-- <#= will_paginate @products #> -->

      </div>
    </div>
  </div>
</div>
